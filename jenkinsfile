pipeline {
    agent any

    tools {
        maven 'mvn3'
    }

    stages {
        stage('Install') {
            steps {
                sh "mvn clean test"
            }
             stage('SonarQube analysis') {
                steps {
                    withSonarQubeEnv('mySonar') {
                        // Optionally use a Maven environment you've configured already
                        withMaven(maven:'mvn3') {
                            sh 'mvn clean package sonar:sonar'
                        }
                    }
                }
            }
        }
    }
}
